{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "build-jvm",
			"command": "/usr/bin/clang++",
			"args": [
				"-std=c++17",
				"-fcolor-diagnostics",
				"-fansi-escape-codes",
				"-g",
				"-I${workspaceFolder}/src",
				"${workspaceFolder}/src/main.cpp",
				"-o",
				"${workspaceFolder}/bin/jvm"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": ""
		}
	]
}